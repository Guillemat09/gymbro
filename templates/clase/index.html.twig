{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}
    <h1 class="display-4 mb-3">{{ titulo }}</h1>
    <a href="{{ path('clase_nueva') }}" class="btn btn-success mb-3">Nueva clase</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Duración (min)</th>
                <th>Lugar</th>
                <th>Límite</th>
                <th>Profesor</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            {% for clase in clases %}
                <tr>
                    <td>{{ clase.id }}</td>
                    <td>{{ clase.nombre }}</td>
                    <td>{{ clase.fecha|date('d/m/Y') }}</td>
                    <td>{{ clase.hora|date('H:i') }}</td>
                    <td>{{ clase.duracion }}</td>
                    <td>{{ clase.lugar }}</td>
                    <td>{{ clase.limite }}</td>
                    <td>
                        {% if clase.profesor and clase.profesor.usuario %}
                            {{ clase.profesor.usuario.nombre }} {{ clase.profesor.usuario.apellido1 }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <a href="{{ path('clase_visualizar', {'id': clase.id}) }}" class="btn btn-outline-primary btn-sm" title="Visualizar">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('clase_editar', {'id': clase.id}) }}" class="btn btn-outline-warning btn-sm ms-1" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <!-- Botón para mostrar el modal de eliminación -->
                        <button type="button" class="btn btn-outline-danger btn-sm ms-1" title="Eliminar"
                                data-bs-toggle="modal" data-bs-target="#modalEliminarClase{{ clase.id }}">
                            <i class="bi bi-trash"></i>
                        </button>

                        <!-- Modal Bootstrap de confirmación -->
                        <div class="modal fade" id="modalEliminarClase{{ clase.id }}" tabindex="-1" aria-labelledby="modalLabelClase{{ clase.id }}" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="modalLabelClase{{ clase.id }}">Confirmar eliminación de clase</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                              </div>
                              <div class="modal-body">
                                ¿Estás seguro de que deseas eliminar la clase <strong>{{ clase.nombre }}</strong>?
                                <ul class="mt-2">
                                    <li><strong>Fecha:</strong> {{ clase.fecha|date('d/m/Y') }}</li>
                                    <li><strong>Hora:</strong> {{ clase.hora|date('H:i') }}</li>
                                    <li><strong>Profesor:</strong>
                                        {% if clase.profesor and clase.profesor.usuario %}
                                            {{ clase.profesor.usuario.nombre }} {{ clase.profesor.usuario.apellido1 }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </li>
                                </ul>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <form method="post" action="{{ path('clase_eliminar', {'id': clase.id}) }}">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">No hay clases registradas.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
