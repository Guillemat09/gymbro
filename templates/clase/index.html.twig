{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}
    <h1 class="display-4 mb-3">{{ titulo }}</h1>
    <a href="{{ path('clase_nueva') }}" class="btn btn-success btn-lg mb-3">Nueva clase</a>

    {# ——— Query escalar para la paginación (evita "Array to string conversion") ——— #}
    {% set persistedQuery = {} %}
    {% for k, v in app.request.query.all %}
        {% if k != 'page' and v is not iterable %}
            {% set persistedQuery = persistedQuery|merge({ (k): v }) %}
        {% endif %}
    {% endfor %}
    {% set persistedQuery = persistedQuery|merge({'per_page': per_page}) %}

    {# ====== Filtros + per_page (sin paginación superior) ====== #}
    <div class="row g-2 align-items-end mb-3">
        <div class="col-12 col-xxl-9">
            <form method="get" id="filter-form" class="row g-2">
                <input type="hidden" name="per_page" value="{{ per_page }}">
                <input type="hidden" name="page" value="1">

                <div class="col-sm-6 col-md-4">
                    <label for="q" class="form-label mb-0">Buscar</label>
                    <input type="text" class="form-control" id="q" name="q" value="{{ q }}" placeholder="nombre, lugar o profesor">
                </div>

                <div class="col-sm-6 col-md-3">
                    <label for="fecha_desde" class="form-label mb-0">Desde</label>
                    <input type="date" class="form-control" id="fecha_desde" name="fecha_desde" value="{{ fecha_desde }}">
                </div>

                <div class="col-sm-6 col-md-3">
                    <label for="fecha_hasta" class="form-label mb-0">Hasta</label>
                    <input type="date" class="form-control" id="fecha_hasta" name="fecha_hasta" value="{{ fecha_hasta }}">
                </div>

                <div class="col-sm-6 col-md-3">
                    <label for="profesor_id" class="form-label mb-0">Profesor</label>
                    <select id="profesor_id" name="profesor_id" class="form-select">
                        <option value="0">— Todos —</option>
                        {% for prof in profesores %}
                            {% set nombre = prof.usuario ? prof.usuario.nombre ~ ' ' ~ prof.usuario.apellido1 : 'Sin nombre' %}
                            <option value="{{ prof.id }}" {{ prof.id == profesor_id ? 'selected' : '' }}>
                                {{ nombre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col-sm-6 col-md-3 d-grid">
                    <button class="btn btn-primary btn-lg w-100" type="submit">Filtrar</button>
                </div>

                <div class="col-sm-6 col-md-3 d-grid">
                    {% if q or fecha_desde or fecha_hasta or profesor_id %}
                        <a class="btn btn-outline-secondary btn-lg w-100" href="{{ path('app_clase') }}">Quitar filtrado</a>
                    {% endif %}
                </div>
            </form>
        </div>

        <div class="col-12 col-xxl-3 d-flex align-items-center">
            <form method="get" id="per-page-form" class="d-flex align-items-center ms-auto">
                {% for k, v in app.request.query.all %}
                    {% if k not in ['per_page', 'page'] %}
                        {% if v is iterable %}
                            {% for vv in v %}
                                <input type="hidden" name="{{ k }}[]" value="{{ vv }}">
                            {% endfor %}
                        {% else %}
                            <input type="hidden" name="{{ k }}" value="{{ v }}">
                        {% endif %}
                    {% endif %}
                {% endfor %}
                <label for="per_page" class="me-2 mb-0 text-nowrap">Mostrar</label>
                <select name="per_page" id="per_page" class="form-select form-select-sm me-2" style="width:auto;">
                    {% for opt in perPageOptions %}
                        <option value="{{ opt }}" {% if opt == per_page %}selected{% endif %}>{{ opt }}</option>
                    {% endfor %}
                </select>
                <span class="text-muted">/ pág.</span>
            </form>
        </div>
    </div>

    {# ====== Ordenación con iconos (mismo estilo que Usuarios) ====== #}
    {% set currentSort = app.request.query.get('sort') %}
    {% set currentDir  = app.request.query.get('direction')|default('asc') %}

    {% macro sort_icon(field, currentSort, currentDir) %}
        {% if currentSort == field %}
            {% if currentDir == 'desc' %}
                <i class="bi bi-caret-down-fill ms-1"></i>
            {% else %}
                <i class="bi bi-caret-up-fill ms-1"></i>
            {% endif %}
        {% else %}
            <i class="bi bi-arrow-down-up ms-1 opacity-50"></i>
        {% endif %}
    {% endmacro %}
    {% import _self as self %}

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'ID', 'c.id')|raw }}</span> {{ self.sort_icon('c.id', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Nombre', 'c.nombre')|raw }}</span> {{ self.sort_icon('c.nombre', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Fecha', 'c.fecha')|raw }}</span> {{ self.sort_icon('c.fecha', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Hora', 'c.hora')|raw }}</span> {{ self.sort_icon('c.hora', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Duración', 'c.duracion')|raw }}</span> {{ self.sort_icon('c.duracion', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Lugar', 'c.lugar')|raw }}</span> {{ self.sort_icon('c.lugar', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Límite', 'c.limite')|raw }}</span> {{ self.sort_icon('c.limite', currentSort, currentDir) }}</th>
                <th><span class="sortable-header">{{ knp_pagination_sortable(clases, 'Profesor', 'u.nombre')|raw }}</span> {{ self.sort_icon('u.nombre', currentSort, currentDir) }}</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            {% for clase in clases %}
                <tr>
                    <td>{{ clase.id }}</td>
                    <td>{{ clase.nombre }}</td>
                    <td>{{ clase.fecha ? clase.fecha|date('d/m/Y') : '-' }}</td>
                    <td>{{ clase.hora ? clase.hora|date('H:i') : '-' }}</td>
                    <td>{{ clase.duracion }}</td>
                    <td>{{ clase.lugar }}</td>
                    <td>{{ clase.limite }}</td>
                    <td>
                        {% if clase.profesor and clase.profesor.usuario %}
                            {{ clase.profesor.usuario.nombre }} {{ clase.profesor.usuario.apellido1 }}
                        {% else %}-{% endif %}
                    </td>
                    <td class="text-center">
                        <a href="{{ path('clase_visualizar', {'id': clase.id}) }}" class="btn btn-outline-primary btn-sm" title="Visualizar"><i class="bi bi-eye"></i></a>
                        <a href="{{ path('clase_editar', {'id': clase.id}) }}" class="btn btn-outline-warning btn-sm ms-1" title="Editar"><i class="bi bi-pencil"></i></a>
                        <button type="button" class="btn btn-outline-danger btn-sm ms-1" title="Eliminar" data-bs-toggle="modal" data-bs-target="#modalEliminarClase{{ clase.id }}"><i class="bi bi-trash"></i></button>
                        {# modal... #}
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="9" class="text-center">No hay clases registradas.</td></tr>
            {% endfor %}
        </tbody>
    </table>

    {# ====== Resumen + paginación inferior (mismo formato que Usuarios) ====== #}
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            Mostrando
            {{ ((clases.currentPageNumber - 1) * clases.itemNumberPerPage) + 1 }}
            -
            {{ clases.currentPageNumber * clases.itemNumberPerPage > clases.totalItemCount
                ? clases.totalItemCount
                : clases.currentPageNumber * clases.itemNumberPerPage }}
            de {{ clases.totalItemCount }} clases
        </div>

        <div>
            {% set page = clases.currentPageNumber %}
            {% set last = clases.pageCount %}
            {% set start = page - 2 > 0 ? page - 2 : 1 %}
            {% set end = page + 2 <= last ? page + 2 : last %}

            <nav aria-label="Paginación inferior">
                <ul class="pagination pagination-sm mb-0 justify-content-end">
                    <li class="page-item {{ page == 1 ? 'disabled' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), persistedQuery|merge({'page': 1})) }}" aria-label="Primera">««</a>
                    </li>
                    <li class="page-item {{ page == 1 ? 'disabled' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), persistedQuery|merge({'page': page - 1})) }}" aria-label="Anterior">Anterior</a>
                    </li>
                    {% for i in start..end %}
                        <li class="page-item {{ i == page ? 'active' : '' }}">
                            <a class="page-link" href="{{ i == page ? '#' : path(app.request.attributes.get('_route'), persistedQuery|merge({'page': i})) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {{ page == last ? 'disabled' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), persistedQuery|merge({'page': page + 1})) }}" aria-label="Siguiente">Siguiente</a>
                    </li>
                    <li class="page-item {{ page == last ? 'disabled' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), persistedQuery|merge({'page': last})) }}" aria-label="Última">»»</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <style>
        /* Igual que en Usuarios: títulos blancos y sin subrayado */
        thead.table-dark a { color:#fff !important; text-decoration:none !important; }
        thead.table-dark a:hover { color:#ccc !important; text-decoration:underline; }
    </style>

    <script>
        document.getElementById('per_page')?.addEventListener('change', function() {
            const form = document.getElementById('per-page-form');
            if (!form) return;
            const params = new URLSearchParams(new FormData(form));
            params.delete('page');
            const url = window.location.pathname + '?' + params.toString();
            window.location.href = url;
        });
    </script>
{% endblock %}
