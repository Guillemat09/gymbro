{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{# --- BOTÓN VOLVER ATRÁS --- #}
{% block back_button %}
<a href="javascript:history.back()" class="btn btn-outline-primary mb-3">
    <i class="bi bi-arrow-left"></i> Volver atrás
</a>
{% endblock %}

{% block body %}
    <h1 class="display-5 mb-4">{{ titulo }}</h1>

    <div class="card">
        <div class="card-header">
            Datos del usuario
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">{{ usuario.id }}</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">{{ usuario.email }}</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">{{ usuario.nombre }}</dd>

                <dt class="col-sm-3">Primer apellido</dt>
                <dd class="col-sm-9">{{ usuario.apellido1 }}</dd>

                <dt class="col-sm-3">Segundo apellido</dt>
                <dd class="col-sm-9">{{ usuario.apellido2 }}</dd>

                <dt class="col-sm-3">Tipo</dt>
                <dd class="col-sm-9">{{ usuario.tipo|capitalize }}</dd>
            </dl>

            {% if usuario.tipo == 'alumno' and usuario.alumno %}
                <hr>
                <h5>Datos de Alumno</h5>
                <dl class="row">
                    <dt class="col-sm-3">Fecha de nacimiento</dt>
                    <dd class="col-sm-9">{{ usuario.alumno.fechaNacimiento|date('d/m/Y') }}</dd>

                    <dt class="col-sm-3">Peso</dt>
                    <dd class="col-sm-9">{{ usuario.alumno.peso }} kg</dd>

                    <dt class="col-sm-3">Altura</dt>
                    <dd class="col-sm-9">{{ usuario.alumno.altura }} cm</dd>

                    <dt class="col-sm-3">Sexo</dt>
                    <dd class="col-sm-9">{{ usuario.alumno.sexo|capitalize }}</dd>
                </dl>

            {% elseif usuario.tipo == 'profesor' and usuario.profesor %}
                <hr>
                <h5>Datos de Profesor</h5>
                <dl class="row">
                    <dt class="col-sm-3">Especialidad</dt>
                    <dd class="col-sm-9">{{ usuario.profesor.especialidad }}</dd>
                </dl>

            {% elseif usuario.tipo == 'administrador' and usuario.administrador %}
                <hr>
                <h5>Datos de Administrador</h5>
                <dl class="row">
                    <dt class="col-sm-3">Activo</dt>
                    <dd class="col-sm-9">
                        {% if usuario.administrador.activo %}
                            <span class="badge bg-success">Sí</span>
                        {% else %}
                            <span class="badge bg-danger">No</span>
                        {% endif %}
                    </dd>
                </dl>
            {% endif %}
        </div>
    </div>

{% endblock %}
