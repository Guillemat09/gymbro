{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}
    <h1 class="display-4 mb-3">{{ titulo }}</h1>
    <a href="{{ path('rutina_nueva') }}" class="btn btn-success mb-3">Nueva rutina</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Alumno</th>
                <th>Nombre de la rutina</th>
            </tr>
        </thead>
        <tbody>
            {% for rutina in rutinas %}
                <tr>
                    <td>
                        {{ rutina.alumno.usuario.nombre }}
                        {{ rutina.alumno.usuario.apellido1 }}
                        {% if rutina.alumno.usuario.apellido2 %}
                            {{ rutina.alumno.usuario.apellido2 }}
                        {% endif %}
                    </td>
                    <td>{{ rutina.nombre }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">No hay rutinas registradas.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
