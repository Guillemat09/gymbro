<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {# Fuente más vistosa para el título #}
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;800&display=swap" rel="stylesheet">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}

        <style>
            /* Hero / imagen superior */
            .hero {
                position: relative;
                height: 180px; /* aprox. 3 veces la altura del navbar */
                display: flex;
                align-items: center;
                justify-content: center;
                background-image: url("{{ asset('imagenes/imagen_gimnasio.jpg') }}");
                background-size: cover;
                background-position: center;
                color: #fff;
                overflow: hidden;
            }
            /* capa semitransparente para que el título destaque */
            .hero::before{
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0,0,0,0.45); /* semitransparencia */
            }
            .hero-title {
                position: relative;
                z-index: 2;
                font-size: 2.25rem;
                font-weight: 800;
                text-transform: uppercase; /* todo en mayúscula */
                letter-spacing: 1px;
                text-shadow: 0 2px 8px rgba(0,0,0,0.6);
                font-family: 'Poppins', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
                margin: 0; /* evita márgenes inesperados */
            }

            /* Quitar espacio entre hero y navbar => no margin en header ni nav */
            header.hero { margin: 0; }
            nav.navbar { margin: 0; }

            /* Ajustes generales */
            body { padding-top: 0; }
            footer { font-size: .9rem; }

            /* Active link style */
            .nav-link.active {
                background: rgba(255,255,255,0.06);
                border-radius: .25rem;
            }

            @media (max-width: 576px) {
                .hero { height: 140px; }
                .hero-title { font-size: 1.75rem; }
            }
        </style>
    </head>
    <body>
        <!-- Imagen superior con título -->
        <header class="hero">
            <h1 class="hero-title">GYMBRO</h1>
        </header>

        <!-- Menú principal: opciones a la izquierda -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand me-3" href="{{ path('app_reserva') }}">GymBro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    {% set current = app.request.attributes.get('_route') %}

                    {# Menú condicionado por rol. Si no hay usuario, no mostramos enlaces de app. #}
                    {% if app.user %}
                      <ul class="navbar-nav me-auto">

                        {# Usuarios: solo ADMIN #}
                        {% if is_granted('ROLE_ADMIN') %}
                          <li class="nav-item">
                            <a class="nav-link {{ current is defined and (current starts with 'app_usuario' or current starts with 'usuario') ? 'active' }}" href="{{ path('app_usuario') }}">Usuarios</a>
                          </li>
                        {% endif %}

                        {# Clases: ADMIN y PROFESOR #}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PROFESOR') %}
                          <li class="nav-item">
                            <a class="nav-link {{ current is defined and (current starts with 'app_clase' or current starts with 'clase') ? 'active' }}" href="{{ path('app_clase') }}">Clases</a>
                          </li>
                        {% endif %}

                        {# Reservas: ADMIN, PROFESOR y ALUMNO #}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PROFESOR') or is_granted('ROLE_ALUMNO') %}
                          <li class="nav-item">
                            <a class="nav-link {{ current is defined and (current starts with 'app_reserva' or current starts with 'reserva') ? 'active' }}" href="{{ path('app_reserva') }}">Reservas</a>
                          </li>
                        {% endif %}

                        {# Rutinas: ADMIN, PROFESOR y ALUMNO #}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PROFESOR') or is_granted('ROLE_ALUMNO') %}
                          <li class="nav-item">
                            <a class="nav-link {{ current is defined and (current starts with 'app_rutina' or current starts with 'rutina') ? 'active' }}" href="{{ path('app_rutina') }}">Rutinas</a>
                          </li>
                        {% endif %}

                      </ul>
                    {% endif %}

                    <ul class="navbar-nav ms-auto">
                      {% if app.user %}
                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-2"></i>
                            <span class="d-none d-sm-inline">
                              {{ app.user.nombre is defined and app.user.nombre ? app.user.nombre : app.user.email }}
                            </span>
                          </a>
                          <ul class="dropdown-menu dropdown-menu-end">
                            <li class="dropdown-header">
                              {{ app.user.email }}
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            {# <li><a class="dropdown-item" href="{{ path('perfil') }}">Mi perfil</a></li> #}
                            <li>
                              <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                              </a>
                            </li>
                          </ul>
                        </li>
                      {% else %}
                        <li class="nav-item">
                          <a class="btn btn-outline-light ms-lg-3" href="{{ path('app_login') }}">Iniciar sesión</a>
                        </li>
                      {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>

        <footer class="bg-light mt-5 py-3">
            <div class="container text-center">
                <small class="text-muted">© 2025 GymBro</small>
            </div>
        </footer>
    </body>
</html>
